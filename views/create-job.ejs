<body> <%- include('partials/navbar', { pagePath: 'home' }) %> <main>
    <div class="post-header">
      <h2 id="post-header-title">Create a Job Post</h2>
    </div>
    <div class="main-container">

      <form action="/api/job-postings" method="POST">
        <div class="form-group">
          <label for="link">Paste Greenhouse Job Link:</label>
          <input type="text" id="link" name="link" />
        </div>
        <button class="add-post-button" type="submit">Submit Job Post</button>
      </form>
    </div>
  </main>
  <script>
    $(document).ready(function() {
      // Form submission handling
      $('form').on('submit', function(e) {
        // Prevent the default form submission
        e.preventDefault();

        // Get the job link value
        var jobLink = $('#link').val();

        // Send an AJAX request to the server
        $.ajax({
          url: '/api/job-postings',
          method: 'POST',
          data: {
            link: jobLink
          },
          success: function(response) {
            // Handle the successful response
            alert('Job posting created successfully!');
            // Reset the form
            $('form')[0].reset();
          },
          error: function(xhr, status, error) {
            // Handle the error response
            alert('An error occurred while creating the job posting.');
            console.error(error);
          }
        });
      });
    });
  </script>
</body>

</html>