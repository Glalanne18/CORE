<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
/>

<nav class="navbar">
  <div class="nav-bar">
    <div class="logo">
      <a href="/"> <img src="/img/core.png" alt="CORE" /> </a>
    </div>
    <div class="top-bar">
      <div class="hamburger-menu">
        <span class="material-symbols-outlined" id="menu-icon" style="z-index: 1000;"> menu </span>
        <div class="menu-content" id="menu-content">
          <a href="/">Communities</a>
          <a href="/jobs">Openings</a>
          <a href="/updates">Updates</a>
          <% if (user) { %>
          <a href="/post/create">Create Post</a>
          <a class="nav-text" href="/profile/<%= user.username %>">Profile</a>
          <form
            id="logoutForm"
            action="/logout?_method=DELETE"
            method="POST"
            style="display: none"
          ></form>
          <a href="/learning">Learning</a>
          <a href="#" onclick="document.getElementById('logoutForm').submit();"
            >Logout</a
          >
          <% } else { %>
          <a href="/login">Login</a>
          <% } %>
        </div>
      </div>
      <div class="nav-text-container">
        <% if (user) { %>
        <a class="navbar-user-info" href="/profile/<%= user.username %>"
          ><%= user.username %></a
        >@<a class="nav-text" href="/">CORE</a><% } else { %>
        <a class="navbar-user-info" href="/login">user</a>@<a
          class="nav-text"
          href="/"
          >CORE</a
        ><% }%>
      </div>
      <div class="user-btns">
        <ul class="user-links">
          <li>
            <% if (user) { %>
            <a
              href="/profile/<%= user.username %>"
              class="user-button <%= currentPath === '/' ? 'active' : '' %>"
            >
              <% } else { %>
                <a
              href="/login"
              class="user-button <%= currentPath === '/' ? 'active' : '' %>"
            >
              <% } %>
              <% if (user && user.avatar) { %>
              <img
                src="<%= user.avatar %>"
                alt="Avatar"
                class="avatar"
                id="avatar" >
              <% } else if (user && user.avatar) { %>
              <img src="/img/default-avatar.png" alt="Avatar" class="avatar" />
              <% } else if (!user) { %>
              <span class="material-symbols-outlined" id="nb-icon">                
                person
              </span>
              <% } %>
              <% if (user) { %> <span class="navbar-btn-text"><%= user.firstname %> <%= user.lastname %>
              <%=user.email %></span> <% } else { %> <span class="navbar-btn-text">Login</span><% } %>
            </a>
          </li>
          <% if (user) { %>
          <li>
            <a
              href="/"
              class="inbox-button <%= currentPath === '/' ? 'active' : '' %>"
            >
              <span class="material-symbols-outlined" id="nb-icon">
                mail
              </span>
              <span class="navbar-btn-text">Inbox</span>
            </a>
          </li>
          <li>
            <form
            id="logoutForm"
            action="/logout?_method=DELETE"
            method="POST"
            style="display: none"
          ></form>
          <a
            href="#"
            class="logout-button <%= currentPath === '/logout' ? 'active' : '' %>"
            onclick="document.getElementById('logoutForm').submit();"
          >
              <span class="material-symbols-outlined" id="nb-icon">
                logout
              </span>
              <span class="navbar-btn-text">Logout</span>
            </a>
          </li>
          <% } else { %>
            <% } %>
        </ul>
      </div>
    </div>
    <div class="nav-btns">
      <ul class="nav-links">
        <li>
          <a
            href="/"
            class="navbar-button <%= currentPath === '/' ? 'active' : '' %>"
          >
            <span class="material-symbols-outlined" id="nb-icon"> forum </span>
            Community
          </a>
        </li>
        <li>
          <a
            href="/jobs"
            class="navbar-button <%= currentPath === '/jobs' ? 'active' : '' %>"
          >
            <span class="material-symbols-outlined" id="nb-icon"> work </span
            >Openings</a
          >
        </li>
        <% if (user) { %>
        <li>
          <a
            href="/learning"
            class="navbar-button <%= currentPath === '/learning' ? 'active' : '' %>"
          >
            <span class="material-symbols-outlined" id="nb-icon"> school </span
            >Learning</a
          >
        </li>
        <% } else { %> <% } %>
        <li>
          <a
            href="/updates"
            class="navbar-button <%= currentPath === '/updates' ? 'active' : '' %>"
          >
            <span class="material-symbols-outlined" id="nb-icon"> update </span
            >Updates</a
          >
        </li>

      </ul>
    </div>
  </div>
</nav>

<script>
document.getElementById("menu-icon").onclick = function () {
    var content = document.getElementById("menu-content");
    var menuIcon = document.getElementById("menu-icon");

    if (content.classList.contains("sidebar-open")) {
        content.classList.remove("sidebar-open");
        menuIcon.textContent = 'menu';
    } else {
        content.classList.add("sidebar-open");
        menuIcon.textContent = 'close';
    }
};



</script>
